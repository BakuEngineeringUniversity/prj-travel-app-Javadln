<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:backgroundTint="#33dadae6"
    android:backgroundTintMode="screen">

    <EditText
        android:id="@+id/loginTextUsername"
        android:layout_width="373dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:ems="10"
        android:fontFamily="@font/rubik_medium"
        android:hint="@string/username"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#2929cc"
        android:textColorHint="#ffffff"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:circularflow_radiusInDP="20"
        tools:ignore="ExtraText"
        android:autofillHints="" />

    <EditText
        android:id="@+id/loginTextPassword"
        android:layout_width="373dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
        android:ems="10"
        android:fontFamily="@font/rubik_medium"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#2929cc"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextUsername"
        tools:circularflow_radiusInDP="20"
        android:autofillHints="" />


    <Button
        android:id="@+id/LoginButton"
        android:layout_width="375dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/log_in"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextPassword" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="509dp"
        android:layout_height="342dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no" />
<!--        app:srcCompat="@drawable/logo1" />-->

</androidx.constraintlayout.widget.ConstraintLayout>